texture 0 "lunaran/mech1_glow.jpg" 0 0 0 0
texture g "lunaran/mech1_glow.jpg"
texscroll 0 0

setshader pulseglowworld
setshaderparam "glowcolor" .7 .7 .7	// glow color
setshaderparam "pulseglowspeed" 1 // pulse frequency (Hz)
setshaderparam "pulseglowcolor" F F F	// pulse glow color
texture 0 "lunaran/mech1_glow.jpg" 0 0 0 0
texture g "lunaran/mech1_glow.jpg"
texscroll 0 0

